.bookmark-card-empty {
    @apply flex justify-center items-center gap-2 p-6 border border-dashed border-divider rounded-lg transition-colors duration-200 ease-linear hover:bg-link-hover hover:text-link-active-text hover:shadow-none active:bg-link-active active:text-link-active-text;
    box-shadow: 0 2px 6px 0 rgba(22, 22, 22, 0.20);

    .bookmark-card-empty__icon {
        @apply min-w-6 min-h-6 w-6 h-6;
    }
}
