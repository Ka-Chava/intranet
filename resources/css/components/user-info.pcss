.user-info {
    @apply flex items-center justify-between pl-6;

    .user-info__wrapper {
        @apply flex items-center gap-x-3;
    }

    .user-info__avatar {
        @apply flex items-center justify-center relative rounded-full border border-web-border-light w-10 h-10;
    }

    .user-info__avatar-image {
        @apply absolute inset-0 w-full h-full rounded-full object-cover;
    }

    .user-info__details {
        @apply font-bold whitespace-nowrap;
    }
}
